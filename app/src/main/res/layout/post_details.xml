<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_post"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:id="@+id/post_details"
    >

    <TextView
        android:id="@+id/post_details_route_info"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"

        android:gravity="center_horizontal|center_vertical"

        android:text="@string/post_details_route"

        android:textColor="@color/text_font_main"
        android:textAppearance="?android:attr/textAppearanceMedium"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        android:background="@drawable/background_post_2"
        android:padding="5dp"
    >

        <ImageButton
            android:id="@+id/post_details_button_facebook"
            android:contentDescription="@string/unnamed"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="5dp"

            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_facebook_menu"
        />

        <ImageButton
            android:id="@+id/post_details_button_call"
            android:contentDescription="@string/unnamed"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignLeft="@+id/post_details_button_facebook"
            android:layout_alignStart="@+id/post_details_button_facebook"
            android:layout_below="@+id/post_details_button_facebook"
            android:layout_marginTop="5dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_call_menu"
        />

        <ImageButton
            android:id="@+id/post_details_button_sms"
            android:contentDescription="@string/unnamed"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignLeft="@+id/post_details_button_call"
            android:layout_alignStart="@+id/post_details_button_call"
            android:layout_below="@+id/post_details_button_call"

            android:layout_marginTop="5dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_sms_menu" />

        <ImageButton
            android:id="@+id/post_details_button_email"
            android:contentDescription="@string/unnamed"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignLeft="@+id/post_details_button_sms"
            android:layout_alignStart="@+id/post_details_button_sms"
            android:layout_below="@+id/post_details_button_sms"

            android:layout_marginTop="5dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_email_menu"
        />

        <ImageView
            android:id="@+id/post_details_line_vertical_1"
            android:contentDescription="@string/unnamed"

            android:layout_width="5dp"
            android:layout_height="match_parent"

            android:layout_alignBottom="@+id/post_details_button_email"
            android:layout_alignTop="@+id/post_details_button_facebook"
            android:layout_toRightOf="@+id/post_details_button_facebook"
            android:layout_toEndOf="@+id/post_details_button_facebook"

            android:paddingTop="5dp"
            android:scaleType="center"
            android:src="@drawable/line_vertical"
        />

        <LinearLayout
            android:id="@+id/post_details_linear_layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:layout_alignTop="@+id/post_details_line_vertical_1"
            android:layout_marginBottom="3dp"

            android:layout_toRightOf="@+id/post_details_line_vertical_1"
            android:layout_toEndOf="@+id/post_details_line_vertical_1"
        >

            <ImageView
                android:id="@+id/post_details_detail_icon"
                android:contentDescription="@string/unnamed"

                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"

                android:gravity="center_horizontal"
                android:src="@drawable/icon_bag"
            />

            <TextView
                android:id="@+id/post_details_post_type"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                android:gravity="center_horizontal"
                android:text="@string/post_details_type"
                android:textColor="@color/text_font_main"
                android:textAppearance="?android:attr/textAppearanceMedium"
            />

        </LinearLayout>

        <ImageView
            android:id="@+id/post_details_line_horizontal_1"
            android:contentDescription="@string/unnamed"

            android:layout_width="5dp"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/post_details_linear_layout_1"
            android:layout_alignStart="@+id/post_details_linear_layout_1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:layout_below="@+id/post_details_linear_layout_1"
            android:scaleType="center"
            android:src="@drawable/line_horizontal"
        />

        <LinearLayout
            android:id="@+id/post_details_linear_layout_2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/post_details_line_horizontal_1"
            android:layout_alignStart="@+id/post_details_line_horizontal_1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/post_details_line_horizontal_1"

            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
        >

            <com.facebook.widget.ProfilePictureView
                android:id="@+id/post_details_profile_pic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
            />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.00"
                android:orientation="vertical"
            >

                <TextView
                    android:id="@+id/post_details_name_surname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_horizontal"
                    android:gravity="center"

                    android:textColor="@color/text_font_main"
                    android:text="@string/default_name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                />

                <RatingBar
                    android:id="@+id/post_details_rating"
                    style="?android:attr/ratingBarStyleSmall"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.1"
                />

                <Button
                    android:id="@+id/post_details_profile"

                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:minHeight="20dip"
                    android:textColor="@color/button_font_main"
                    android:text="@string/post_details_profile"
                />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/post_details_line_horizontal_2"
            android:contentDescription="@string/unnamed"

            android:layout_width="5dp"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/post_details_linear_layout_1"
            android:layout_alignStart="@+id/post_details_linear_layout_1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/post_details_linear_layout_2"

            android:scaleType="center"
            android:src="@drawable/line_horizontal"
        />

        <LinearLayout
            android:id="@+id/post_details_linear_layout_3"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/post_details_linear_layout_2"
            android:layout_alignStart="@+id/post_details_linear_layout_2"
            android:layout_below="@+id/post_details_line_horizontal_2"

            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
        >

            <ImageView
                android:id="@+id/post_details_icon_date"
                android:contentDescription="@string/unnamed"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:src="@drawable/icon_date"
            />

            <TextView
                android:id="@+id/post_details_date"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:gravity="center_horizontal"
                android:text="@string/post_details_date"

                android:textColor="@color/text_font_main"
                android:textAppearance="?android:attr/textAppearanceSmall"
            />

            <ImageView
                android:id="@+id/post_details_icon_time"
                android:contentDescription="@string/unnamed"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:src="@drawable/icon_time"
            />

            <TextView
                android:id="@+id/post_details_time"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:gravity="center_horizontal"
                android:text="@string/post_details_time"
                android:textColor="@color/text_font_main"
                android:textAppearance="?android:attr/textAppearanceSmall"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/post_details_linear_layout_4"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/post_details_linear_layout_3"
            android:layout_alignStart="@+id/post_details_linear_layout_3"
            android:layout_alignRight="@+id/post_details_linear_layout_3"
            android:layout_alignEnd="@+id/post_details_linear_layout_3"
            android:layout_below="@+id/post_details_linear_layout_3"

            android:layout_marginBottom="4dp"
            android:gravity="center_horizontal"
        >

            <ImageView
                android:id="@+id/post_details_icon_seats"
                android:contentDescription="@string/unnamed"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:src="@drawable/icon_person"
            />

            <TextView
                android:id="@+id/post_details_seats"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:gravity="center_horizontal"
                android:text="@string/post_details_seats"
                android:textColor="@color/text_font_main"
                android:textAppearance="?android:attr/textAppearanceSmall"
            />

            <ImageView
                android:id="@+id/post_details_icon_money"
                android:contentDescription="@string/unnamed"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:src="@drawable/icon_money"
            />

            <TextView
                android:id="@+id/post_details_price"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:gravity="center_horizontal"
                android:text="@string/post_details_price"
                android:textColor="@color/text_font_main"
                android:textAppearance="?android:attr/textAppearanceSmall"
            />
        </LinearLayout>

        <ImageView
            android:id="@+id/post_details_line_horizontal_3"
            android:contentDescription="@string/unnamed"

            android:layout_width="5dp"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/post_details_linear_layout_4"
            android:layout_alignStart="@id/post_details_linear_layout_4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:layout_below="@+id/post_details_linear_layout_4"
            android:scaleType="center"
            android:src="@drawable/line_horizontal"
        />

        <TextView
            android:id="@+id/post_details_comment"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/post_details_line_horizontal_3"
            android:layout_alignStart="@+id/post_details_line_horizontal_3"
            android:layout_alignRight="@+id/post_details_line_horizontal_3"
            android:layout_alignEnd="@+id/post_details_line_horizontal_3"
            android:layout_below="@+id/post_details_line_horizontal_3"

            android:layout_margin="4dp"
            android:gravity="center_horizontal"

            android:text="@string/post_details_comment"
            android:textColor="@color/text_font_main"
            android:textAppearance="?android:attr/textAppearanceSmall"
        />

        <ImageView
            android:id="@+id/post_details_line_horizontal_4"
            android:contentDescription="@string/unnamed"

            android:layout_width="5dp"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/post_details_linear_layout_1"
            android:layout_alignStart="@+id/post_details_linear_layout_1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:layout_below="@+id/post_details_comment"
            android:scaleType="center"
            android:src="@drawable/line_horizontal"
        />

        <LinearLayout
            android:id="@+id/post_details_linear_layout_5"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/post_details_linear_layout_2"
            android:layout_alignStart="@+id/post_details_linear_layout_2"
            android:layout_alignRight="@+id/post_details_comment"
            android:layout_alignEnd="@+id/post_details_comment"

            android:layout_below="@+id/post_details_line_horizontal_4"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
        >

            <ImageView
                android:id="@+id/post_details_pin"
                android:contentDescription="@string/unnamed"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:src="@drawable/icon_other_pin"
            />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"

                android:layout_weight="4"
                android:orientation="vertical"
            >

                <TextView
                    android:id="@+id/textPoint"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"

                    android:text="@string/post_details_destination"
                    android:textColor="@color/text_font_main"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                />

                <TextView
                    android:id="@+id/post_details_destination"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"

                    android:text="@string/post_details_destination_adress"
                    android:textColor="@color/text_font_main"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                />
            </LinearLayout>

            <ImageView
                android:id="@+id/post_details_image_arrow_2"
                android:contentDescription="@string/unnamed"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:src="@drawable/icon_arrow"
            />
        </LinearLayout>

        <ImageView
            android:id="@+id/post_details_line_horizontal_5"
            android:contentDescription="@string/unnamed"

            android:layout_width="5dp"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/post_details_linear_layout_1"
            android:layout_alignStart="@+id/post_details_linear_layout_1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:layout_below="@+id/post_details_linear_layout_5"
            android:scaleType="center"
            android:src="@drawable/line_horizontal"
        />

        <LinearLayout
            android:id="@+id/post_details_linear_layout_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignRight="@+id/post_details_linear_layout_5"
            android:layout_alignEnd="@+id/post_details_linear_layout_5"
            android:layout_below="@+id/post_details_line_horizontal_5"

            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/post_details_line_vertical_1"
            android:layout_toEndOf="@+id/post_details_line_vertical_1"
        >

            <ImageView
                android:id="@+id/post_details_home_pin"
                android:contentDescription="@string/unnamed"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:src="@drawable/icon_other_pin"
            />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"

                android:layout_weight="4"
                android:orientation="vertical"
            >

                <TextView
                    android:id="@+id/post_details_start"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"

                    android:text="@string/post_details_start"
                    android:textColor="@color/text_font_main"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                />

                <TextView
                    android:id="@+id/post_details_start_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"

                    android:text="@string/post_details_start_adress"

                    android:textColor="@color/text_font_main"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                />
            </LinearLayout>

            <ImageView
                android:id="@+id/post_details_image_arrow_1"
                android:contentDescription="@string/unnamed"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:src="@drawable/icon_arrow"
            />
        </LinearLayout>

        <ImageView
            android:id="@+id/line_horizontal6"
            android:contentDescription="@string/unnamed"

            android:layout_width="5dp"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/post_details_button_email"
            android:layout_alignStart="@+id/post_details_button_email"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:layout_below="@+id/post_details_linear_layout_6"
            android:scaleType="center"
            android:src="@drawable/line_horizontal"
        />
    </RelativeLayout>

</LinearLayout>