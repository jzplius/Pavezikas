<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center_horizontal"
    >

    <Button
        android:id="@+id/number_picker_increase"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:background="@drawable/number_increase_btn"
    />

    <EditText
        android:id="@+id/number_picker_edit_text"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:background="@drawable/number_input"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/text_font_main"
        android:textSize="30sp"
        android:inputType="number"
        android:hint="@string/hint_number_picker"
        android:textColorHint="@color/hint_text_light"
    />

    <Button
        android:id="@+id/number_picker_decrease"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:background="@drawable/number_decrease_btn"
    />

    </LinearLayout>