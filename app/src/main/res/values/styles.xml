<resources>
    <style name="Header.Text.Big" parent="">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Post.Text" parent="">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#707d74</item>
    </style>

    <style name="MenuLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/menu_item_background</item>
        <item name="android:alpha">.75</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MenuText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@color/text_font_menu</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuIcon">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/line_horizontal</item>
    </style>

    <style name="LineLightHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/line_horizontal</item>
    </style>

    <style name="LineHorizontal2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/line_horizontal2</item>
    </style>

    <style name="Button_1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_color_type_1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_width">42dp</item>
    </style>

    <style name="Button_2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_color_type_2</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/button_type_1_bl</item>
    </style>

    <style name="EditText_1">
        <item name="android:textColor">@color/text_font_main</item>
        <item name="android:background">@drawable/number_input</item>
    </style>

    <style name="Spinner" parent="android:Widget.Holo.Spinner">
        <item name="android:popupBackground">@drawable/spinner_background</item>
    </style>

    <style name="ListView" parent="android:Widget.Holo.ListView.DropDown">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/TextAppearance</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:Widget.DropDownItem">
        <item name="android:textAppearance">@style/TextAppearance</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance.Holo.Widget.TextView">
        <item name="android:textColor">@color/list_item</item>
    </style>

    <style name="LinearLayout">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="alertDialogStyle" parent="android:Theme.Holo.Dialog">
        <item name="android:color">@color/post_shadow</item>
    </style>

</resources>
